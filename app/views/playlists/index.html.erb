<p id="notice"><%= notice %></p>

<%= render partial: 'shared/platform'%>
<%= render partial: 'shared/search'%>


<% if current_user === nil %>

  <!-- Modal -->
  <div class="modal fade" id="welcome-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header welcome-modal">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body welcome-modal">
          <h3>Welcome to Captain Playlist!</h3>

          <h5>Heroic awesomeness in 3 steps:</h5>

          <ol>
            <li>
              <%= link_to "Create an account,", new_user_registration_path, {class: 'btn btn-info'} %>
            </li>
            <li>Click on your streaming service logo in the navbar to connect</li>
            <li>Profit! You now have the power to add any playlist you find here to your streaming account!</li>
          </ol>

          <div class="login-link">Have an account?
          	<%= link_to "Login", new_user_session_path %>
          </div>

        </div>
        <div class="modal-footer welcome-modal">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <%= link_to "Create an Account", new_user_registration_path, {class: 'btn btn-primary'} %>
        </div>
      </div>
    </div>
  </div>

<% end %>

<div class="playlists-wrap">
	<div class="title">Showing playists matching: <%= @playlist_query %></div>
  <%= render partial: 'shared/playlist', collection: @custom_playlists %>
</div>